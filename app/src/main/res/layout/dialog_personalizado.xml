<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/texte1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Nuevo Nombre:"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/nuevoNombre"
        android:layout_below="@+id/texte1"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Nombre"/>

    <TextView
        android:id="@+id/texte2"
        android:layout_below="@+id/nuevoNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Nuevo Telefono:"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/nuevoTelefono"
        android:layout_below="@+id/texte2"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefono"/>


</RelativeLayout>